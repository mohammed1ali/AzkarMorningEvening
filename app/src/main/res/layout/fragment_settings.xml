            </androidx.constraintlayout.widget.ConstraintLayout>
-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >


        <TextView
            android:id="@+id/tv_share_app"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/share_app"
            android:textSize="22sp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            app:drawableStartCompat="@drawable/ic_share_blue"
            android:drawablePadding="16dp"
            android:paddingStart="16dp"
            android:layout_margin="8dp"
            />

            <TextView
                android:id="@+id/tv_source"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/source"
                android:textSize="22sp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                app:drawableStartCompat="@drawable/ic_stack_books"
                android:drawablePadding="16dp"
                android:paddingStart="16dp"
                android:layout_margin="8dp"
                />

            <TextView
                android:id="@+id/tv_contact_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/contact_us"
                android:textSize="22sp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"

                app:drawableStartCompat="@drawable/ic_mail"
                android:drawablePadding="16dp"
                android:paddingStart="16dp"
                android:layout_margin="8dp"
                />

            <TextView
                android:id="@+id/tv_introduction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/introduction"
                android:textSize="22sp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"

                app:drawableStartCompat="@drawable/ic_info"
                android:drawablePadding="16dp"
                android:paddingStart="16dp"
                android:layout_margin="8dp"
                />

            <TextView
                android:id="@+id/tv_author_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/author"
                android:textSize="22sp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"

                app:drawableStartCompat="@drawable/ic_writer"
                android:drawablePadding="16dp"
                android:paddingStart="16dp"
                android:layout_margin="8dp"
                />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="8dp"
                >

                <TextView
                    android:id="@+id/tv_switch_light_mode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/light_mode"
                    android:textSize="22sp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switch_night_mode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                     />

                <TextView
                    android:id="@+id/tv_switch_dark_mode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dark_mode"
                    android:textSize="22sp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>